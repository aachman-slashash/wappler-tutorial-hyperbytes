{
  "meta": {
    "options": {
      "linkedFile": "/views/cwadmin/page_content.ejs",
      "linkedForm": "upload_image_form"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "page_comtent_id",
        "name": "page_comtent_id"
      },
      {
        "type": "file",
        "fieldName": "Image",
        "name": "Image",
        "sub": [
          {
            "type": "text",
            "name": "name"
          },
          {
            "type": "text",
            "name": "type"
          },
          {
            "type": "number",
            "name": "size"
          },
          {
            "type": "text",
            "name": "error"
          }
        ],
        "outputType": "file"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "upload",
        "module": "upload",
        "action": "upload",
        "options": {
          "fields": "{{$_POST.Image}}",
          "path": "/public/uploads/page_images/{{$_POST.page_comtent_id}}",
          "replaceSpace": true,
          "asciiOnly": true,
          "replaceDiacritics": true
        },
        "meta": [
          {
            "name": "name",
            "type": "text"
          },
          {
            "name": "path",
            "type": "text"
          },
          {
            "name": "url",
            "type": "text"
          },
          {
            "name": "type",
            "type": "text"
          },
          {
            "name": "size",
            "type": "text"
          },
          {
            "name": "error",
            "type": "number"
          }
        ],
        "outputType": "file",
        "output": true
      },
      {
        "name": "repeat",
        "module": "core",
        "action": "repeat",
        "options": {
          "repeat": "{{upload}}",
          "outputFields": [],
          "exec": {
            "steps": [
              {
                "name": "image",
                "module": "image",
                "action": "load",
                "options": {
                  "path": "{{path}}"
                },
                "outputType": "object",
                "meta": [
                  {
                    "name": "width",
                    "type": "number"
                  },
                  {
                    "name": "height",
                    "type": "number"
                  }
                ]
              },
              {
                "name": "",
                "module": "image",
                "action": "resize",
                "options": {
                  "instance": "image",
                  "upscale": true,
                  "width": 640
                }
              },
              {
                "name": "newImage_copy",
                "module": "image",
                "action": "save",
                "options": {
                  "instance": "image",
                  "path": "/public/uploads/page_images/{{$_POST.page_comtent_id}}/full",
                  "format": "auto"
                },
                "output": true
              },
              {
                "name": "",
                "module": "image",
                "action": "cover",
                "options": {
                  "instance": "image",
                  "width": 160,
                  "height": 80
                }
              },
              {
                "name": "newImage",
                "module": "image",
                "action": "save",
                "options": {
                  "instance": "image",
                  "path": "/public/uploads/page_images/{{$_POST.page_comtent_id}}/cover",
                  "format": "auto"
                },
                "output": true
              }
            ]
          }
        },
        "output": true,
        "meta": [
          {
            "name": "$index",
            "type": "number"
          },
          {
            "name": "$number",
            "type": "number"
          },
          {
            "name": "$name",
            "type": "text"
          },
          {
            "name": "$value",
            "type": "object"
          },
          {
            "name": "name",
            "type": "text"
          },
          {
            "name": "path",
            "type": "text"
          },
          {
            "name": "url",
            "type": "text"
          },
          {
            "name": "type",
            "type": "text"
          },
          {
            "name": "size",
            "type": "text"
          },
          {
            "name": "error",
            "type": "number"
          }
        ],
        "outputType": "array"
      }
    ]
  },
  "usedModules": {
    "sharp": "^0.29.3"
  }
}